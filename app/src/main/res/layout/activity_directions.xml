<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vsergeychik390.hccmaps.Directions">

    <TextView
        android:id="@+id/routeText"
        android:layout_width="338dp"
        android:layout_height="323dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compass_image" />

    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="121dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/routeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/compass1" />

    <TextView
        android:id="@+id/DegreeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="127dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/routeText"
        app:layout_constraintEnd_toStartOf="@+id/compass_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
